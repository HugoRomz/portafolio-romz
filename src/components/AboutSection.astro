---
// Componente: src/components/Profile.astro

// Definimos los datos dinámicos
const userData = {
  title: "A Lead UX & UI designer based in Canada",
  description: `
    I <span class="text-primary font-semibold">design and develop</span>
    services for customers of all sizes, specializing in creating stylish, modern
    websites, web services and online stores. My passion is to design digital user
    experiences through the bold interface and meaningful interactions.
  `,
  info: {
    column1: [
      { label: "Birthday", value: "4th April 1998" },
      { label: "Age", value: "22 Yr" },
      { label: "Residence", value: "Canada" },
      { label: "Address", value: "Toronto" },
    ],
    column2: [
      { label: "Email", value: "hello@example.com" },
      { label: "Phone", value: "+1 234 567 890" },
      { label: "Freelance", value: "Available" },
      { label: "LinkedIn", value: "@yourprofile" },
    ],
  },
};
---

<div class="px-8 mb-24 rounded-xl shadow-md max-w-4xl mx-auto text-center">
  <!-- Título dinámico -->
  <h1 class="text-xl font-bold text-accent2 mb-4">
    {userData.title}
  </h1>

  <p
    class="text-textPrimary leading-relaxed mb-6"
    set:html={userData.description}
  />

  <!-- Información dinámica en dos columnas -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-lg max-w-2xl mx-auto">
    <!-- Columna 1 -->
    <div class="text-left">
      {
        userData.info.column1.map((item) => (
          <div class="grid grid-cols-6 grid-rows-1 ">
            <div class="col-span-2  text-right mr-2 text-accent2 font-semibold">
              {item.label}
            </div>
            <div class="col-start-3 ">|</div>
            <div class="col-span-3 col-start-4 text-textPrimary/80">
              {item.value}
            </div>
          </div>
        ))
      }
    </div>

    <!-- Columna 2 -->
    <div class="text-left">
      {
        userData.info.column2.map((item) => (
          <div class="grid grid-cols-6 grid-rows-1 ">
            <div class="col-span-2 text-right mr-2 text-accent2 font-semibold">
              {item.label}
            </div>
            <div class="col-start-3 ">|</div>
            <div class="col-span-3 col-start-4 text-textPrimary/80 ">
              {item.value}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
