---
import {
  getTotalProjectsCount,
  getProjectsCardWithTech,
} from "src/utils/projects";
import CardProject from "./CardProject.astro";

const projects = getProjectsCardWithTech();
const LIMIT = 3;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {projects.slice(0, LIMIT).map((project) => <CardProject project={project} />)}
</div>

<div class="flex items-center justify-center mt-4">
  <a
    href="/projects"
    class="bg-linear-to-r from-primary to-secondary text-white px-4 py-2 text-center rounded-2xl font-semibold transition-all duration-300 ease-in-out backdrop-blur-md hover:transform hover:translate-y-0.5 hover:shadow-[0_10px_30px] shadow-primary/50"
  >
    Ver Todos los Proyectos ({getTotalProjectsCount()})
  </a>
</div>
