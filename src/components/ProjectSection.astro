---
import { api } from "@config/api";
import CardProject from "./CardProject.astro";
import { getProjectsWithTech } from "src/utils/projects";

const projects = getProjectsWithTech();

const limit = 3;
---

<div class="grid gap-4 py-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
  {projects.slice(0, limit).map((project) => <CardProject {project} />)}
</div>
